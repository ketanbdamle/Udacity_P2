<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.flixeek">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MovieListActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MovieDetailActivity"
            android:parentActivityName=".ui.MovieListActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MovieListActivity" />
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".ui.MovieListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.MovieListActivity" />
        </activity>

        <activity
            android:name="com.flixeek.ui.YoutubePlayerViewActivity"
            android:label="Trailer"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="fullSensor"/>

        <activity
            android:name="com.flixeek.ui.TrailerWebViewActivity"
            android:parentActivityName="com.flixeek.ui.MovieListActivity"
            android:screenOrientation="landscape">

            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.flixeek.ui.MovieListActivity" />
        </activity>

        <provider
            android:authorities="com.flixeek"
            android:name=".data.MovieDetailsProvider"
            android:exported="false"
            android:syncable="false" />

    </application>

</manifest>
